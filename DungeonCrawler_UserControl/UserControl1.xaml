<UserControl x:Class="DungeonCrawler_UserControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DungeonCrawler_UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid Background="White">
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="530" VerticalAlignment="Top" Width="1000" KeyDown="canvas_KeyDown" Focusable="True"/>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="71" Margin="10,555,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="750" FontFamily="Arial Rounded MT Bold" FontSize="15" IsEnabled="False"/>
        <Button x:Name="End_turn_Button" HorizontalAlignment="Left" Height="25" Margin="862,520,0,24" Width="100" Content="End Turn" Click="End_turn_Button_Click" Focusable="False"></Button>
        <Button x:Name="Add_Monster" HorizontalAlignment="Left" Height="25" Margin="862,590,0,24" Width="100" Content="Add Monster" Focusable="False" Click="Add_Monster_Click"></Button>
    </Grid>
</UserControl>
    
   
    
    
